padding = 10px

img
  width 100%
  height 100%

.textBlock
  padding padding/2
  margin padding/2
  .imageBlock
    padding padding
    float right
    width 40%
    overflow hidden
  p
    line-height 2
    margin 1vw
    text-align justify
    text-indent 2vw
    word-spacing 0.5em
   //border solid black 1px
.textFlex
  .textBlock
    padding padding/2
    margin padding/2
    width 33.33%

.secondBlock
  display flex
  padding padding/2
  margin padding/2
  flex-direction row
  .textBl
    width 60%
    line-height 2
    margin 1vw
    text-align justify
    word-spacing 1px

  .imgBl
    diplay flex
    flex-direction column
    float right
    width 40%

@media(max-width:700px)
  .textBlock
    padding padding/2
    margin @padding
    .imageBlock
      margin padding
      float none
      margin auto
      width 50%
      p
        line-height 2
        margin padding
        text-align justify
        word-spacing 1px
  .secondBlock
    padding padding/2
    margin @padding
    flex-direction column
    .textBl
      width 100%
      line-height 2
      margin 0
      padding 0
      text-align justify
      word-spacing 1px
      box-sizing border-box
    .imgBl
      width 100%

    
